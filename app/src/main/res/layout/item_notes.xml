<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/notes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/notes_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="kdhafbuagyflhiafhuihefiusufdhuhsiekfeaifuhiafsfausdufnsbiafkdsfideifhuwrhdkjjsdiufnkjhiuknuibckrmhudsiujdsnmsiohiwenfcbruifmdkndfohuiekcnwnvbwuieo"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="#D8D8D8" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="20 Feb 2022"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/white" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>